{
  "options": {
    "env": {
      "Path": "C:\\mingw\\bin;${env:Path}" 
    },
    "shell": {
      "args": [
        "/C"
      ],
      "executable": "C:\\Windows\\System32\\cmd.exe"
    }
  },
  "tasks": [
    {
      "args": [
        "-std=c++23",
        "-Wall",
        "-Wextra",
        "-fexec-charset=GBK",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "command": "C:\\mingw\\bin\\g++.exe",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "gcc single file build",
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "silent",
        "showReuseMessage": false
      },
      "problemMatcher": "$gcc",
      "type": "process"
    },
    {
      "args": [
        "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
        "-ExecutionPolicy",
        "ByPass",
        "-NoProfile",
        "-File",
        "C:\\mingw\\bin\\pause-console.ps1",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "command": "START",
      "dependsOn": "gcc single file build",
      "label": "run and pause",
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "never",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": [
        "-ExecutionPolicy",
        "ByPass",
        "-NoProfile",
        "-File",
        "C:\\mingw\\bin\\check-ascii.ps1",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "command": "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "dependsOn": "gcc single file build",
      "label": "check ascii",
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "never",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "type": "process"
    }
  ],
  "version": "2.0.0"
}